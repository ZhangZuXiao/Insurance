/* components/menu/index.wxss */
.chunk-menu {
  width: 100%;
  height: 100rpx;
  border-top: 1rpx solid #f5f5f5;
  display: flex;
  justify-content: space-between;
  background: #ffffff;
}
.item-menu {
  width: 33%;
  height: 100%;
  line-height: 100rpx;
  text-align: center;
  border-right: 1rpx solid #f5f5f5;
}
.item-menu:active {
  background: #eeeeee;
}