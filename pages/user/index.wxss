/* pages/user/index.wxss */
.page-user {
  width: 100%;
  height: 100%;
  background: #f5f5f5;
  position: absolute;
}
.head-vessel {
  width: 100%;
  height: 440rpx;
  overflow: hidden;
  position: relative;
}
.head-img {
  width: 100%;
  height: 100vw;
}
.head-avatar {
  width: 100%;
  height: 400rpx;
  position: absolute;
  left: 0;
  top:0;
  bottom: 0;
  right: 0;
  margin: auto;
  overflow: hidden;
}
.head-avatar-rac {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
  position: absolute;
  left: 0;
  top:0;
  bottom: 0;
  right: 0;
  margin: auto;
  overflow: hidden;
  border: 2rpx solid #f5f5f5;
  animation: ani 3s linear infinite;
}
.nickName {
  font-size: 30rpx;
  text-align: center;
  width: 100%;
  display: block;
  position: absolute;
  top: 320rpx;
}
.avatar {
  width: 100%;
  height: 100%;
}
.list-item {
  width: 90%;
  background: #fff;
  border-radius: 12rpx;
  margin: 50rpx auto;
  padding: 30rpx 20rpx;
}

.menu {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
}
@keyframes ani {
   0%{
        box-shadow: 0 0 0px #ffffff
   }
   25%{
        box-shadow: 0 0 10px #ffffff
   }
    50%{
        box-shadow: 0 0 20px #ffffff
   }
   75%{
        box-shadow: 0 0 10px #ffffff
   }
   100%{
    box-shadow: 0 0 0px #ffffff
   }
}