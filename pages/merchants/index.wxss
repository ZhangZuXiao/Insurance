/**index.wxss**/

.page {
  position: absolute;
  height: 100%;
  width: 100%;
  background: #f5f5f5;
  overflow: auto;
}

.view-panel {
  width: 100%;
  height: 360rpx;
  background: #cccccc;
  text-align: center;
  overflow: hidden
}

.view-item {
  width: 90%;
  height: 160rpx;
  padding: 32rpx 20rpx;
  position: absolute;
  border-radius: 12rpx;
  top: 260rpx;
  margin: auto;
  left: 0;
  right: 0;
  overflow: hidden;
  display: flex;
  justify-content: space-around;
  background: #ffffff;
}
.nav-item {
  widows:  33%;
  text-align: center;
  padding: 24rpx;
  border-radius: 12rpx;
}
.nav-item:active {
  background: #f5f5f5;
}
.item-text {
  font-size: 28rpx;
  line-height: 50rpx;
  color: #999999;
}
.list-item {
  width: 90%;
  background: #fff;
  border-radius: 12rpx;
  margin: 150rpx auto auto auto;
  padding: 30rpx 20rpx;
}
.banner-img {
  width: 100%;
}