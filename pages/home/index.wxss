/**index.wxss**/

.page {
  position: absolute;
  height: 100%;
  width: 100%;
  background: #f5f5f5;
  overflow: auto;
}
.menu {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
}
.search-wrap {
  display: flex;
  align-items: center;
  width: 100%;
  height: 90rpx;
  color: #fff;
  background: #fb4747;
  border-bottom: 1px solid #fb4747;
}
.search {
  flex-grow: 1;
  margin: 15rpx 24rpx;
}
.view-panel {
  width: 100%;
  height: 360rpx;
  background: #cccccc;
  text-align: center;
  overflow: hidden
}
.swiper {
  width: 100%;
  height: 100%;
}
.swiper-item {
  width: 100%;
  height: 100%;
  top:0;
  line-height: 0;
  display: block;
}
.slide-image {
  width: 100%;
  top: 0;
}
.navigation-panel {
  width: 90%;
  margin: 50rpx auto;
  padding: 40rpx;
  background: #ffffff;
  border-radius: 20rpx;
  box-sizing: border-box;
  overflow: auto;
   
}
.nav-item {
  width: 25%;
  height: 160rpx;
  float: left;
  text-align: center;
  padding: 24rpx 0;
  box-sizing: border-box;
}
.nav-item:active {
  background: #eeeeee;
}
.nav-item-right {
  border-right: 1px solid #eee;
}
.nav-item-bottom {
  border-bottom: 1px solid #eee;
}
.nav-title {
  margin-bottom: 30rpx;
}
.item-text {
  font-size: 24rpx;
  line-height: 50rpx;
  color: #999999;
}